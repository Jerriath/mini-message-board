extends layout

block content
  header
    h1=title 
    h2="Watcha got in mind"
  main
    form(action="/new", method="POST")
      input(type="text", placeholder="Title...", name="title", class="title-input")
      textarea(placeholder="Type out your message here...", name="msg", cols="30")
      input(type="text" placeholder="Username...", name="user", class="user-input")
      button.post-btn(type="submit", class="submit-btn")= "post"